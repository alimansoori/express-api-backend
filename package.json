{
  "name": "express-api-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "yarn build && pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon -L src/app/index.ts",
    "build": "rimraf build && tsc -p tsconfig.json",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:dev:stop": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:prod:stop": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
